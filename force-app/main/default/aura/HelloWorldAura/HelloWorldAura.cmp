<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="greeting" type="String" default="Hello World!!!!!" />
    <aura:attribute name="numberTest" type="Integer" default="11" />
	Hello World Aura!!!
    Within Tags we need to provide double quotes
    But in plain(without tags we need to provide without tags)
    <lightning:card footer="Card Footer" title="Hello">
        <p class="slds-p-horizontal_small">
           Hello World from Aura Component
            {! v.greeting}
            <!-- Destructive variant: Identifies a potentially negative action -->
    		<lightning:button 
                              variant="destructive" 
                              label="Destructive" 
                              title="Destructive action"
            />
        </p>
    </lightning:card>
</aura:component>